<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4"
    android:orientation="vertical"
    tools:context=".Fragments.Book_Later">


    <LinearLayout

        android:layout_margin="@dimen/_8sdp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/after_search_nearby_lin"
            android:elevation="@dimen/_2sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:gravity="center"
            android:background="@drawable/linewithconner"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_margin="@dimen/_8sdp"
                android:src="@drawable/ic_location"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp" />
            <TextView
                android:id="@+id/after_search_nearby_tv"
                android:paddingEnd="@dimen/_8sdp"
                android:paddingStart="@dimen/_1sdp"
                android:paddingTop="@dimen/_8sdp"
                android:paddingBottom="@dimen/_8sdp"
                android:gravity="start|center"
                android:text="@string/near_by"
                android:textSize="@dimen/_12sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/after_search_search_len"
            android:elevation="@dimen/_2sdp"
            android:gravity="center"
            android:background="@drawable/linewithconner"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_margin="@dimen/_8sdp"
                android:src="@drawable/ic_magnify"
                android:layout_width="15dp"
                android:layout_height="20dp" />
            <EditText
                android:id="@+id/search_et_after_search"
                android:paddingEnd="@dimen/_8sdp"
                android:paddingStart="@dimen/_1sdp"
                android:paddingTop="@dimen/_8sdp"
                android:paddingBottom="@dimen/_8sdp"
                android:background="@null"
                android:textSize="@dimen/_12sdp"
                android:gravity="start|center"
                android:hint="@string/search"
                android:actionViewClass="android.support.v7.widget.SearchView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>
    <android.support.v7.widget.SwitchCompat
        android:paddingTop="@dimen/_5sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:background="#ffffff"
        android:paddingEnd="@dimen/_10sdp"
        android:paddingStart="@dimen/_10sdp"
        android:id="@+id/after_search_swtich"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/with_price"
        android:checked="true"
        android:gravity="left|center_vertical"/>

    <RelativeLayout
        android:id="@+id/after_search_len"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/pull_refresh_after_searchitem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.RecyclerView
                android:layout_margin="5dp"
                android:id="@+id/after_search_item_recycleview"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </android.support.v7.widget.RecyclerView>
        </android.support.v4.widget.SwipeRefreshLayout>

        <ProgressBar
            style="@style/MyProgressBar"
            android:layout_alignParentBottom="true"
            android:visibility="gone"
            android:id="@+id/loader_ats"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>

</LinearLayout>