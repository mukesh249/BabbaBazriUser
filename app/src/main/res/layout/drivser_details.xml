<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="@dimen/_4sdp"
    android:layout_margin="@dimen/_4sdp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:paddingBottom="@dimen/_6sdp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Truck"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/_12sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_centerVertical="true"
                    android:id="@+id/vehicle_img"
                    android:src="@drawable/truckdriver"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp" />
                <LinearLayout
                    android:layout_marginStart="@dimen/_6sdp"
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@+id/vehicle_img"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="RJ48TA"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:gravity="center"
                        android:text="4.5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginEnd="@dimen/_6sdp"
                    android:layout_centerInParent="true"
                    android:layout_toLeftOf="@+id/driver_profile"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Driver Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:gravity="center"
                        android:drawableLeft="@drawable/star"
                        android:text="4.5"
                        android:textSize="@dimen/_20sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <ImageView
                    android:layout_centerVertical="true"
                    android:id="@+id/driver_profile"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/user"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp" />
            </RelativeLayout>

        </LinearLayout>
        <RelativeLayout
            android:layout_marginEnd="@dimen/_12sdp"
            android:layout_marginStart="@dimen/_12sdp"
            android:id="@+id/driver_btn_call"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/call_img"
                android:src="@drawable/call"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp" />

            <TextView
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/call_img"
                android:textSize="@dimen/_12sdp"
                android:layout_marginStart="@dimen/_6sdp"
                android:textColor="@color/grey"
                android:text="CALL DRIVER"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/time_left"
                android:layout_toStartOf="@+id/driver_time_left"
                android:text="Time"
                android:paddingEnd="@dimen/_10sdp"
                android:textStyle="bold"
                android:textSize="@dimen/_12sdp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/driver_time_left"
                android:paddingTop="@dimen/_1sdp"
                android:paddingBottom="@dimen/_1sdp"
                android:paddingStart="@dimen/_6sdp"
                android:paddingEnd="@dimen/_6sdp"
                android:background="#cccccc"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"
                android:text="2.Min Left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>