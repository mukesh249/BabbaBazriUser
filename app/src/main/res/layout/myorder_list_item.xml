<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    android:orientation="vertical"
    android:layout_margin="@dimen/_6sdp">
    <LinearLayout
        android:layout_margin="@dimen/_5sdp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/date_myorder_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="sun, mar 14 ,12:40 PM"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/vehicle_naeme_no_myorder_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:text=" "
                    android:textColor="@color/black"
                    android:textSize="@dimen/_18sdp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end">

                <ImageView
                    android:background="@drawable/round_line"
                    android:id="@+id/my_order_list_vehicle_image"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="end"
                    android:layout_marginRight="@dimen/_4sdp"
                    android:src="@drawable/logo" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/draw_circle" />

                <TextView
                    android:minLines="2"
                    android:id="@+id/src_address_myorder_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:text="14,Pratap nagar,Jaipur"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp" />
            </LinearLayout>

            <View
                android:layout_width="2dp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:background="@color/light_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/draw_circle_green" />

                <TextView
                    android:minLines="2"
                    android:id="@+id/destination_address_myorder_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:text="14,Pratap nagar,Jaipur"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/_6sdp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="@dimen/_10sdp"
                        android:textStyle="bold"
                        android:gravity="center|start"
                        android:textColor="@color/black"
                        android:text="@string/booking_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textSize="@dimen/_10sdp"
                        android:gravity="center|start"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:id="@+id/booking_status_myorder_list"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="0.5"
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="@dimen/_10sdp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:text="@string/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/black"
                        android:id="@+id/price_myorder_list"
                        android:text="1500"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/_3sdp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="@dimen/_10sdp"
                        android:textStyle="bold"
                        android:gravity="center|start"
                        android:textColor="@color/black"
                        android:id="@+id/material_myorder_list"
                        android:text="@string/material_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textSize="@dimen/_10sdp"
                        android:gravity="center|start"
                        android:layout_weight="0.5"
                        android:textColor="@color/black"
                        android:id="@+id/materialtypr_myorder_list"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" >
                    <TextView
                        android:textSize="@dimen/_10sdp"
                        android:textStyle="bold"
                        android:gravity="center|start"
                        android:textColor="@color/black"
                        android:text="@string/delivery_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textSize="@dimen/_10sdp"
                        android:gravity="center|start"
                        android:layout_weight="0.5"
                        android:textColor="@color/black"
                        android:id="@+id/date_d_myorder_list"
                        android:text="15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:orientation="horizontal"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" >
                    <TextView
                        android:textSize="@dimen/_10sdp"
                        android:textStyle="bold"
                        android:gravity="center|start"
                        android:textColor="@color/black"
                        android:text="@string/distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textSize="@dimen/_10sdp"
                        android:gravity="center|start"
                        android:layout_weight="0.5"
                        android:textColor="@color/black"
                        android:id="@+id/distance_myorder_list"
                        android:text="15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="@dimen/_10sdp"
                        android:textStyle="bold"
                        android:gravity="center|start"
                        android:textColor="@color/black"
                        android:text="@string/delivery_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textSize="@dimen/_10sdp"
                        android:gravity="center|start"
                        android:textColor="@color/black"
                        android:id="@+id/delivery_status_myorder_list"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:text="@string/quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/black"
                        android:id="@+id/orderQuantity_myorder_list"
                        android:text="1500 sqft"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_margin="@dimen/_5sdp"
                android:layout_weight="1"
                android:id="@+id/delete_item"
                android:text="@string/price_details"
                android:textColor="@color/white"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:src="@drawable/ic_delete"
                android:layout_gravity="center"
                android:background="@drawable/btn_request"
                android:layout_width="0dp"
                android:layout_height="@dimen/_30sdp" />
            <Button
                android:layout_margin="@dimen/_5sdp"
                android:layout_weight="1"
                android:id="@+id/btn_viewdetail"
                android:text="@string/track_your_order"
                android:textColor="@color/white"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:src="@drawable/ic_delete"
                android:layout_gravity="center"
                android:background="@drawable/booknow_btn"
                android:layout_width="0dp"
                android:layout_height="@dimen/_30sdp" />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>