<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Price_Chart">
    <TextView
        android:gravity="center|start"
        android:paddingStart="@dimen/_15sdp"
        android:textStyle="bold"
        android:textColor="#022033"
        android:textSize="@dimen/_20sdp"
        android:text="@string/price_details"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
    </TextView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="fill_parent">

            <TextView
                android:visibility="gone"
                android:id="@+id/select_vehicle_name"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/light_trans_background"
                android:paddingStart="@dimen/_5sdp"
                android:textColor="@android:color/black" />
            <TextView
                android:visibility="gone"
                android:background="@drawable/light_trans_background"
                android:layout_marginTop="@dimen/_10sdp"
                android:id="@+id/id_stirng"
                android:padding="@dimen/_3sdp"
                android:text="Id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginTop="@dimen/_3sdp"
                android:padding="@dimen/_3sdp"
                android:background="@drawable/light_trans_background"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:paddingStart="@dimen/_5sdp"
                    android:text="@string/price"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:singleLine="true"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/price_chart"
                    android:paddingStart="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:singleLine="true"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/_3sdp"
                android:padding="@dimen/_3sdp"
                android:background="@drawable/light_trans_background"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:paddingStart="@dimen/_5sdp"
                    android:text="@string/loading"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:singleLine="true"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/loading__chart"
                    android:paddingStart="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:singleLine="true"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/_3sdp"
                android:padding="@dimen/_3sdp"
                android:background="@drawable/light_trans_background"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:paddingStart="@dimen/_5sdp"
                    android:text="@string/unloading"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:singleLine="true"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/unloading_chart"
                    android:paddingStart="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:singleLine="true"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/_3sdp"
                android:padding="@dimen/_3sdp"
                android:background="@drawable/light_trans_background"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:paddingStart="@dimen/_5sdp"
                    android:text="@string/load_km"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:singleLine="true"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/loadKM_chart"
                    android:paddingStart="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:singleLine="true"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/_3sdp"
                android:padding="@dimen/_3sdp"
                android:background="@drawable/light_trans_background"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:paddingStart="@dimen/_5sdp"
                    android:text="@string/unload_km"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:singleLine="true"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/unloadKM_chart"
                    android:paddingStart="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:singleLine="true"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="@dimen/_3sdp"
                android:padding="@dimen/_3sdp"
                android:background="@drawable/light_trans_background"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:paddingStart="@dimen/_5sdp"
                    android:text="@string/driversalary"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:singleLine="true"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/driverSalary_chart"
                    android:paddingStart="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:singleLine="true"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/_3sdp"
                android:padding="@dimen/_3sdp"
                android:background="@drawable/light_trans_background"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:paddingStart="@dimen/_5sdp"
                    android:text="@string/driver_daily_exp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:singleLine="true"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/driverDailyExp_chart"
                    android:paddingStart="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:singleLine="true"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/_3sdp"
                android:padding="@dimen/_3sdp"
                android:background="@drawable/light_trans_background"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:paddingStart="@dimen/_5sdp"
                    android:text="@string/helper"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:singleLine="true"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/helper_chart"
                    android:paddingStart="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:singleLine="true"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/_3sdp"
                android:padding="@dimen/_3sdp"
                android:background="@drawable/light_trans_background"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:paddingStart="@dimen/_5sdp"
                    android:text="@string/royalty"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:singleLine="true"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/royalty_chart"
                    android:paddingStart="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:singleLine="true"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/_3sdp"
                android:padding="@dimen/_3sdp"
                android:background="@drawable/light_trans_background"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:paddingStart="@dimen/_5sdp"
                    android:text="@string/toll_tax"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:singleLine="true"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tollTax_chart"
                    android:paddingStart="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:singleLine="true"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/_3sdp"
                android:padding="@dimen/_3sdp"
                android:background="@drawable/light_trans_background"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:paddingStart="@dimen/_5sdp"
                    android:text="@string/driver_saving"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:singleLine="true"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/driverSaving_chart"
                    android:paddingStart="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:singleLine="true"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/_3sdp"
                android:padding="@dimen/_3sdp"
                android:background="@drawable/light_trans_background"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:paddingStart="@dimen/_5sdp"
                    android:text="@string/night_stay"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:singleLine="true"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/nightStay_chart"
                    android:paddingStart="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:singleLine="true"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/_3sdp"
                android:padding="@dimen/_3sdp"
                android:background="@drawable/light_trans_background"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:paddingStart="@dimen/_5sdp"
                    android:text="@string/min_charge"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:singleLine="true"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/minCharge_chart"
                    android:paddingStart="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:singleLine="true"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/_3sdp"
                android:padding="@dimen/_3sdp"
                android:background="@drawable/light_trans_background"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:paddingStart="@dimen/_5sdp"
                    android:text="@string/total_km"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:singleLine="true"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/totalKM_chart"
                    android:paddingStart="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:singleLine="true"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/_3sdp"
                android:padding="@dimen/_3sdp"
                android:background="@drawable/light_trans_background"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:paddingStart="@dimen/_5sdp"
                    android:text="@string/tyres"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:singleLine="true"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tyres_chart"
                    android:paddingStart="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:singleLine="true"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/_3sdp"
                android:padding="@dimen/_3sdp"
                android:background="@drawable/light_trans_background"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:paddingStart="@dimen/_5sdp"
                    android:text="@string/days"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:singleLine="true"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/days_chart"
                    android:paddingStart="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:singleLine="true"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:layout_marginTop="@dimen/_3sdp"
                android:padding="@dimen/_3sdp"
                android:background="@drawable/light_trans_background"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:paddingStart="@dimen/_5sdp"
                    android:text="Vehicle Type Id: "
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:singleLine="true"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/vehicleTypeId"
                    android:paddingStart="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:singleLine="true"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/_3sdp"
                android:padding="@dimen/_3sdp"
                android:background="@drawable/light_trans_background"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:paddingStart="@dimen/_5sdp"
                    android:text="@string/gst_tax"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:singleLine="true"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/gst_tv"
                    android:paddingStart="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:singleLine="true"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/_3sdp"
                android:padding="@dimen/_3sdp"
                android:background="@drawable/light_trans_background"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:textSize="@dimen/_12sdp"
                    android:paddingStart="@dimen/_5sdp"
                    android:text="@string/total_price"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:singleLine="true"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textStyle="bold"
                    android:textSize="@dimen/_12sdp"
                    android:id="@+id/totalPrice_chart"
                    android:paddingStart="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:singleLine="true"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <Button
                android:id="@+id/cancel_chart"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:textColor="@color/underline"
                android:background="@drawable/btn_request"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cancel"/>


        </LinearLayout>

    </ScrollView>
</LinearLayout>